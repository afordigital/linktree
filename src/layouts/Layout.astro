---
import Lamps from "@/components/Lamps.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <script
      async
      src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-6347651974195855"
      crossorigin="anonymous"></script>
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>

    <!-- HTML Meta Tags -->
    <title>Afor Digital Linktree</title>
    <meta
      name="description"
      content="Official website of Afor Digital with all her social media to get more information about her"
    />

    <!-- Facebook Meta Tags -->
    <meta property="og:url" content="https://www.afor.digital/" />
    <meta property="og:type" content="website" />
    <meta property="og:title" content="Afor Digital Linktree" />
    <meta
      property="og:description"
      content="Official website of Afor Digital with all her social media to get more information about her"
    />
    <meta property="og:image" content="/open-graph.png" />

    <!-- Twitter Meta Tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta property="twitter:domain" content="afor.digital" />
    <meta property="twitter:url" content="https://www.afor.digital/" />
    <meta name="twitter:title" content="Afor Digital Linktree" />
    <meta
      name="twitter:description"
      content="Official website of Afor Digital with all her social media to get more information about her"
    />
    <meta name="twitter:image" content="/open-graph.png" />
  </head>
  <body class="font-montserrat relative">
    <Lamps />
    <slot />
  </body>
</html>

<style is:global>
  body {
    background: #000;
    position: relative;
  }
</style>
